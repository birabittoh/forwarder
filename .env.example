# Telegram API credentials (get them from https://my.telegram.org/apps)
API_ID=12345678
API_HASH=your_api_hash_here

# Your phone number (in international format)
PHONE_NUMBER=+391234567890

# Source channel ID
SOURCE_CHANNEL_ID=-1001234567890

# Target channel ID
TARGET_CHANNEL_ID=-1009876543210

# Discussion group ID for the target channel (optional)
DISCUSSION_GROUP_ID=-1001111111111

# Comment template file (optional)
COMMENT_TEMPLATE_FILE=comment.md

# Enable comment notifications (default: false)
ENABLE_COMMENT_NOTIFICATIONS=false

# Show "forwarded from" info when forwarding messages (default: false)
SHOW_FORWARDED=false

# Ignore messages matching this regex (optional)
IGNORE_REGEX="#aff|VERISURE|KINDLE"

# Directory for TDLib database
DATABASE_DIRECTORY=./tdlib-db

# Directory for TDLib files
FILES_DIRECTORY=./tdlib-files

# TDLib's verbosity level (0=fatal, 1=error, 2=warning, 3=info, 4=debug, 5=verbose)
VERBOSITY_LEVEL=2
