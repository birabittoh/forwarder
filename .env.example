# Telegram API credentials (ottienili da https://my.telegram.org/apps)
API_ID=12345678
API_HASH=your_api_hash_here

# Il tuo numero di telefono (formato internazionale)
PHONE_NUMBER=+391234567890

# ID del canale sorgente (usa @username o -100xxxxxxxxxx)
SOURCE_CHANNEL_ID=-1001234567890

# ID del canale di destinazione (deve essere tuo)
TARGET_CHANNEL_ID=-1009876543210

# ID del gruppo di discussione del canale di destinazione
DISCUSSION_GROUP_ID=-1001111111111

# Regex per ignorare messaggi
IGNORE_REGEX="#aff|VERISURE|KINDLE"

# Template del commento (supporta Markdown)
COMMENT_TEMPLATE_FILE=comment.md

# Directory per il database di TDLib
DATABASE_DIRECTORY=./tdlib-db

# Directory per i file di TDLib
FILES_DIRECTORY=./tdlib-files

# Livello di verbosit√† del log (0=fatal, 1=error, 2=warning, 3=info, 4=debug, 5=verbose)
VERBOSITY_LEVEL=2
